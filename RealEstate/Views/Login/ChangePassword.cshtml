@using RealEstate.Models
@model ChangePasswordVM
@{
    ViewBag.Title = "ChangePassword";
}



<div class="col-md-offset-4 col-md-4">
    <!-- My address start -->
    <div class="my-address">
        <div class="main-title-2">
            <h1><span>Change</span> Password</h1>


        </div>
@using (Html.BeginForm("ChangePassword", "Login", Model))
{
    @Html.AntiForgeryToken()
        @*<form action="index.html">*@
            <div class="form-group">
                @Html.Label("Old Password")
                @Html.PasswordFor(x => x.OldPassword, new { @class = "form-control", @placeholder = "Enter Old Password" })
                @Html.ValidationMessageFor(model => model.OldPassword)
            </div>
            <div class="form-group">
                @Html.Label("New Password")
                @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Enter New Password" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="form-group">
                @Html.Label("Confirm New Password")
                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm New Password" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
            <button  class="btn button-md button-theme">Save Changes</button>
}
        @*</form>*@
    </div>
    <!-- My address end -->
</div>
