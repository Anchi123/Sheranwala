@using RealEstate.Models
<div class="content-area featured-properties">
    <div class="container">
        <!-- Main title -->
        <div class="main-title">
            <h1><span>Featured</span> Properties</h1>
        </div>
        <ul class="list-inline-listing filters filters-listing-navigation">
            <li class="active btn filtr-button filtr" data-filter="all">All</li>
            @foreach (var v in (List<TypeVM>)ViewBag.TypeList)
            {
                <li data-filter="@v.TypeID" class="btn btn-inline filtr-button filtr">@v.Type</li>
            }
            
            @*<li data-filter="2" class="btn btn-inline filtr-button filtr">Office</li>
            <li data-filter="3" class="btn btn-inline filtr-button filtr">Apartment</li>
            <li data-filter="4" class="btn btn-inline filtr-button filtr">Residential</li>*@
        </ul>
        <div class="row">
            <div class="filtr-container">
@foreach (var v in (List<PropertyListVM>)ViewBag.Featured)
{
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12  filtr-item" data-category="@v.TypeID">
                    <div class="property">
                        <!-- Property img -->
                        <a href="/Property/PropertyDetail/@v.PropertyID" class="property-img">
                            @if (v.IsFeatured)
                            {
                            <div class="property-tag button alt featured"> Featured</div>
                            }
                            <div class="property-tag button sale">@v.Purpose</div>
                            <div class="property-price">Rs.@v.Price</div>
                            @*<div style="">*@
                                <img src="~/Images/@v.ImagePath" alt="properties-1" @*class="img-responsive"*@ style="height:100%;height:250px;width:361px;overflow:hidden;">
                            @*</div>*@
                        </a>
                        <!-- Property content -->
                        <div class="property-content">
                            <!-- title -->
                            <h1 class="title">
                                <a href="/Property/PropertyDetail/@v.PropertyID">@v.PropertyTitle</a>
                            </h1>
                            <!-- Property address -->
                            <h3 class="property-address">
                                <a href="#">
                                    <i class="fa fa-map-marker"></i>@v.PlotNo @(String.IsNullOrWhiteSpace(v.Block) ? "" : v.Block + " Block") @v.Society @v.City
                                </a>
                            </h3>
                            <h3 class="property-address">
                                <a href="#">
                                    <i class="flaticon-people"></i>Agent: @v.User
                                </a>
                            </h3>
                            <!-- Facilities List -->
                            <ul class="facilities-list clearfix">
                            
                                <li>
                                    <i class="flaticon-square-layouting-with-black-square-in-east-area"></i>
                                    <span>@v.LandArea @v.UOM</span>
                                </li>
                               
                            </ul>
                            <!-- Property footer -->
                            <div class="property-footer">
                                <span class="left"> <i class="fa fa-calendar-o icon"></i> @Math.Round((DateTime.Now - v.TransDate).TotalDays) days ago</span>
                                @*<span class="right">
                                    <a href="index-4.html#"><i class="fa fa-heart-o icon"></i></a>
                                    <a href="index-4.html#"><i class="fa fa-share-alt"></i></a>
                                </span>*@
                            </div>
                        </div>
                    </div>
                </div>
}
