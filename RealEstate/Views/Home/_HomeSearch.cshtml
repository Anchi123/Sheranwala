@using RealEstate.Models

<div class="search-area">
    <div class="search-area-inner">
        <div class="search-contents ">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <div class="form-group">
                    @Html.Label("Purpose")
                    @(Html.Kendo().ComboBox().Name("Purpose").BindTo(new List<SelectListItem>() {
              new SelectListItem() {
                Text = "Sale", Value = "Sale"
              },
              new SelectListItem() {
                Text = "Rent", Value = "Rent"
              }
          }).HtmlAttributes(new { @style = "width:100%" })
          .SelectedIndex(0))
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <div class="form-group">
                    @Html.Label("Type")
                    @(Html.Kendo().ComboBox()
        .Name("TypeID")
        .DataTextField("Type")
        .DataValueField("TypeID")
        .AutoBind(true)
        .DataSource(source =>
        {
            source.Read(read =>
            {
                read.Action("TypeList", "Property");
            })
            .ServerFiltering(false);
        }).HtmlAttributes(new { @style = "width:100%" })
        .SelectedIndex(0)
                    )
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <div class="form-group">
                    @Html.Label("Society")
                    @(Html.Kendo().ComboBox()
        .Name("SocietyID")
        .DataTextField("Society")
        .DataValueField("SocietyID")
        .AutoBind(false).CascadeFrom("CityID")
        .DataSource(source =>
        {
            source.Read(read =>
            {
                read.Action("SocietyList", "Property").Data("CityFilter");
            })
            .ServerFiltering(true);
        }).HtmlAttributes(new { @style = "width:100%" })
        .SelectedIndex(0)
                    )
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <div class="form-group">
                    @Html.Label("Land Area")
                    @Html.Kendo().NumericTextBox().Name("LandArea").HtmlAttributes(new { @style = "width:100%" })
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <div class="form-group">
                    @Html.Label("Area Unit")
                    @(Html.Kendo().ComboBox()
        .Name("UOMID")
        .DataTextField("UOM")
        .DataValueField("UOMID")
        .AutoBind(true)
        .DataSource(source =>
        {
            source.Read(read =>
            {
                read.Action("UOMList", "Property");
            })
            .ServerFiltering(false);
        }).HtmlAttributes(new { @style = "width:100%" })
        .SelectedIndex(0)
                    )

                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <div class="form-group">
                    @Html.Label("Price")
                    @Html.Kendo().NumericTextBox().Name("Price").HtmlAttributes(new { @style = "width:100%" })
                </div>
            </div>
            @*<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <div class="form-group">
                    <div class="range-slider">
                        <div data-min="0" data-max="150000" data-unit="USD" class="range-slider-ui ui-slider" aria-disabled="false"></div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>*@
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 ">
                <div class="form-group">
                    <button class="search-button">Search</button>
                </div>
            </div>
        </div>
    </div>
</div>


